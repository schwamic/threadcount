@require './../../styles/variables'

.threadcount--column
  width: 200px
  margin-top: 30px
  margin-right: 30px
  margin-bottom: 30px
  padding-right: 30px
  height: 100%
  border-right: 1px solid $black
  &.no-border
    border: none
    margin-right: 0

.image--container
  .image--arrow
    position: relative
    left: -4px
    height: 30px
    margin-top: 10px
    margin-bottom: 10px
  .image--p
    font-size: 0.75rem
    margin-top: 0
    margin-bottom: 0
  .image--img
    width: 200px
    margin-top: 10px
    margin-bottom: 10px
    cursor: pointer
    &.removed
      height: 250px
      width: 200px
      background: $black
      display: flex
      align-items: center
      justify-content: center
      cursor: default
      p
        width: 80%
        font-size: 0.75rem
        text-align: center
        color: $white

.uppercase
  text-transform: uppercase
